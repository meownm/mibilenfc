<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:text="NFC Read"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_marginTop="8dp"
        android:text="Hold the document to NFC reader. CAN is optional (needed for some PACE documents)."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/canEditText"
        android:hint="CAN (optional)"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/readNfcButton"
        android:text="Read NFC"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_marginTop="16dp"
        android:text="Idle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/nfcLogScrollView"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/nfcLogTextView"
            android:text=""
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
